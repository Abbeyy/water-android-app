<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/fifteen_dp_padding">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_dp_height" />

    <android.support.v7.widget.AppCompatTextView
        android:textSize="@dimen/twentytwo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goal_setting"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourty_dp_height" />

    <android.support.v7.widget.AppCompatTextView
        android:textSize="@dimen/twenty_dp_textsizing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to_achieve_your_goals"/>

</android.support.v7.widget.LinearLayoutCompat>